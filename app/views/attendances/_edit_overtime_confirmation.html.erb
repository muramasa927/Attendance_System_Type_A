
<div class = "modal-dialog modal-lg modal-dialog-center">
  <div class = "modal-content">
    <div class = "modal-header">
      <button type = "button" class = "close" data-dismiss = "modal" aria-label = "Close">
        <span aria-hidden = "true">&times;</span>
      </button>
    </div>

    <div class = "modal-body">
      <div class = "row">
        <div class = "col-md-12">
          <h1>残業承認画面</h1>
          <%= form_with(model: @user, url: user_attendances_update_overtime_confirmation_path(@user), local: true, method: :patch) do |f| %>
              <table class = "table table-bordered table-sm table-hover">
                <thead>
                  <tr>
                    <th>日付</th>
                    <th>曜日</th>
                    <th>終了予定時間</th>
                    <th>指定勤務終了時間</th>
                    <th>時間外時間</th>
                    <th>業務処理内容</th>
                    <th>指示者確認</th>
                    <th>変更</th>
                    <th>勤怠を確認する<th>
                  </tr>
                </thead>
                <% @applying_attendances.each do | attendance | %>
                  <tbody>
                    <td><%= attendance.worked_on %></td>
                    <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                    <td><%= attendance.finish_overtime %></td>
                    <td><%# 指定勤務時間 %></td>
                    <td><%# 時間外時間 %></td>
                    <td><%= attendance.business_processing_content %></td>
                    <td><%= f.select :application_information,[["申請中", 1], ["承認", 2], ["否認", 3]] %></td>
                    <td><%= f.check_box :change_information, {}, true, false %></td>
                    <td><%= attendance.receive_superior_id %></td>
                  </tbody>  
                <% end %>
              </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 