<header class = "navbar navbar-fixed-top navber-inverse">
  <div class = "container">
    <% if logged_in? %>
      <%= link_to "勤怠システム", current_user, id: "logo" %>
    <% else %>
      <%= link_to "勤怠システム", root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "ホーム", current_user %></li>
          <% if current_user.admin? %>
            <li><%= link_to "全てのユーザー", users_path %></li>
            <li><%= link_to "出勤社員一覧", users_attendances_employee_path%></li>
            <li><%= link_to "基本情報の修正", users_edit_time_info_path  %></li>
            <li><%= link_to "拠点情報一覧", companies_path%></li>
          <% end %>
          <li class = "dropdown">
            <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown">
              <%= current_user.name %><b class = "caret"></b>
            </a>
            <ul class = "dropdown-menu">
            <li><%= link_to "勤怠", current_user unless current_user.admin? %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class = divider></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "トップ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>