<% provide(:class_text, 'basic-info') %>
<% provide(:btn_text, '更新') %>

<div class="modal-fade">
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h1 class="modal-title">基本情報編集</h1>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <%= f.label :name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name, class: "form-control" %></p>

            <%= f.label :email, class: "label-#{yield(:class_text)}" %>
            <%= f.email_field :email, class: "form-control" %>
            <%# 所属 %>
            <%= f.label :affiliation, class: "lael-#{yield(:class_text)}" %>
            <%= f.text_field :affiliation, class: "form-control" %>
            <%# 社員番号 %>
            <%= f.label :employee_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :employee_number, class: "form-control" %>
            <%# uid %>
            <%= f.label :uid, class: "label-#{yield(:class_text)}" %>
            <%= f.number_field :uid, class: "form-control" %>
            <%# 基本勤務時間 %>
            <%= f.label :basic_work_time, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :basic_work_time, class: "form-control" %>
            <%# 勤務開始時間 %>
            <%= f.label :designated_work_start_time, class: "label-#{yield(:class_text)}" %>
            <%= f.datetime_field :designated_work_start_time, class: "form-control" %>
            <%# 勤務終了時間 %>
            <%= f.label :designated_work_end_time, class: "label-#{yield(:class_text)}" %>
            <%= f.datetime_field :designated_work_end_time, class: "form-control" %>

            <%= f.label :password, class: "label-#{yield(:class_text)}" %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:btn_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>